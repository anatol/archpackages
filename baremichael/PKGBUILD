# Maintainer: Allan McRae <allan@archlinux.org>
# Contributor: judd <jvinet@zeroflux.org>

pkgname=baremichael
pkgver=7
pkgrel=1
pkgdesc="Minimalistic, baremetal framework for launching your C and/or assembly code on the SCC"
license=('')
arch=('i686' 'x86_64')
url="http://marcbug.scc-dc.com/svn/repository/trunk/baremetal/baremichael/"
groups=('devel')
depends=()
source=($url/tarballs/baremichael_v$pkgver.tgz)
md5sums=('f88b14cab916f12913a36aa8d75e4f83')

build() {
  cd "${srcdir}/${pkgname}"
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  make prefix="${pkgdir}"/usr install
}
