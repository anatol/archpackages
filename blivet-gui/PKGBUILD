# Maintainer: Anatol Pomozov <anatol.pomozov@gmail.com>

pkgname=blivet-gui
pkgver=0.1.9
pkgrel=1
pkgdesc='GUI tool for storage configuration'
arch=(any)
license=(GPL)
url='http://github.com/vojtechtrefny/blivet-gui'
depends=(python2 python2-blivet python2-gobject urlgrabber)
source=(http://github.com/vojtechtrefny/blivet-gui/archive/$pkgver.zip)
sha1sums=('5e0255d06db79ab8c4685fe2fdf9c4c33076c1c6')

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1

  install -D -m644 blivet-gui.desktop "$pkgdir/usr/share/applications/blivet-gui.desktop"
  install -D -m644 org.fedoraproject.pkexec.blivet-gui.policy "$pkgdir/usr/share/polkit-1/actions/org.fedoraproject.pkexec.blivet-gui.policy"
}
