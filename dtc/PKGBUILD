pkgname=dtc
pkgver=1.4.0
pkgrel=1
pkgdesc='Device Tree Compiler'
url='http://jdl.com/software/'
arch=(i686 x86_64)
license=(GPL2)
makedepends=(git)
source=(git://git.kernel.org/pub/scm/utils/dtc/dtc.git#tag=v$pkgver)
md5sums=('SKIP')

build() {
  cd dtc
  make
}

check() {
  cd dtc
  make check
}

package() {
  cd dtc
  make DESTDIR="$pkgdir" PREFIX=/usr install
}

