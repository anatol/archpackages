_gemname=bluecloth
pkgname=ruby-$_gemname
pkgver=2.2.0
pkgrel=1
pkgdesc='BlueCloth is a Ruby implementation of John Gruber Markdown, a text-to-HTML conversion tool for web writers'
arch=(i686 x86_64)
url='http://deveiate.org/projects/BlueCloth'
license=(BSD)
depends=(ruby)
