_gemname=capistrano
pkgname=ruby-$_gemname
pkgver=3.1.0
pkgrel=2
pkgdesc='Capistrano - Welcome to easy deployment with Ruby over SSH'
arch=(any)
url='http://capistranorb.com/'
license=(MIT)
depends=(ruby ruby-sshkit ruby-i18n)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
