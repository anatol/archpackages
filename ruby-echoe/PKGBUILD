pkgname=ruby-$_gemname
pkgver=4.6.5
pkgrel=1
pkgdesc='A Rubygems packaging tool that provides Rake tasks for documentation, extension compiling, testing, and deployment.'
arch=(any)
url='https://github.com/evan/echoe'
license=('Academic Free License (AFL) v. 3.0')
depends=(ruby ruby-rubyforge ruby-allison)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
sha1sums=(4b589bfddbfed1cf625ff013e30e6750f7988911)

package() {
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/MIT-LICENSE" "$pkgdir/usr/share/licenses/$pkgname/MIT-LICENSE"
}
