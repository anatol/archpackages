_gemname=rmagick
pkgname=ruby-$_gemname
pkgver=2.13.2
pkgrel=2
pkgdesc='Ruby binding to ImageMagick'
arch=(i686 x86_64)
url='http://rubyforge.org/projects/rmagick'
license=(MIT)
depends=(imagemagick ruby)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem
        hdri.patch)
noextract=($_gemname-$pkgver.gem)
sha1sums=('050eb01c2a8ac4f1a78d257f5e7d836477c39309'
          '35dfb912f65f1290eb9854e1ed04a24ab43ba6c9')

prepare() {
  rm -rf $_gemname-$pkgver
  gem unpack $_gemname-$pkgver.gem
  cd $_gemname-$pkgver
  patch -p1 < "$srcdir/hdri.patch"
  gem build rmagick.gemspec
}

package() {
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver/$_gemname-$pkgver.gem
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"

  rm -rf "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/ext"
}
