# Maintainer: Anatol Pomozov <anatol.pomozov@gmail.com>
# Contributor: Thomas Sowell <tom@fancydriving.org>

pkgname=vboot-utils
pkgdesc='Chromium OS verified boot utilities'
pkgver=R38.6158
_tag=release-${pkgver/\./-}.B
pkgrel=1
arch=(i686 x86_64)
url='http://git.chromium.org/gitweb/?p=chromiumos/platform/vboot_reference.git;a=summary'
license=('custom:chromiumos')
makedepends=(trousers libyaml util-linux)
source=(vboot-utils-ld.patch
        vboot-utils-shared-cgpt.patch
        https://chromium.googlesource.com/chromiumos/platform/vboot_reference/+archive/refs/heads/$_tag.tar.gz)

sha1sums=('3c87584710d05fe01d68d87e33343613c5ba2966'
          '726cb6ef709dce3f662e3b59a9d6bcb0a637a2d8'
          '8e0ad2b61d5945ec5b7266016a47178d866bbce7')

prepare() {
  patch -p1 < "$srcdir/vboot-utils-ld.patch"
  patch -p1 < "$srcdir/vboot-utils-shared-cgpt.patch"
}

build() {
  make
}

package() {
  make DESTDIR="$pkgdir" MINIMAL=1 install
  install -m 644 -D LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
